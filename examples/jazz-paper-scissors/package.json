    "jazz-nodejs": "workspace:*",
    "jazz-react": "workspace:*",
    "jazz-tools": "workspace:*",
    "lucide-react": "^0.485.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.0.2",
