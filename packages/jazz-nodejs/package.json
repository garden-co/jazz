{
  "name": "jazz-nodejs",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "type": "module",
  "license": "MIT",
  "version": "0.8.21",
  "dependencies": {
    "cojson": "workspace:0.8.21",
    "cojson-transport-ws": "workspace:0.8.21",
    "jazz-tools": "workspace:0.8.21",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/ws": "^8.5.5",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "dev": "tsup src/index.ts --format esm --watch",
    "test": "vitest --run --root ../../ --project jazz-nodejs",
    "test:watch": "vitest --watch --root ../../ --project jazz-nodejs",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write",
    "typecheck": "tsc --noEmit --sourceMap -p tsconfig.json",
    "build": "rm -rf ./dist && tsup src/index.ts --format esm",
    "prepublishOnly": "npm run build"
  }
}
