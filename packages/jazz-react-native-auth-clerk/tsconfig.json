{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./src/tests"]
}
