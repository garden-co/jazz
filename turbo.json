{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {},
  "tasks": {
    "build": {
      "env": [
        "RESEND_API_KEY",
        "RESEND_AUDIENCE_ID",
        "GRAFANA_SERVICE_ACCOUNT"
      ],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".svelte-kit/output/**", "pkg/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "type-check": {},
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    }
  }
}
